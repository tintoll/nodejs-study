doctype html
html
    head
        meta(charset='utf-8')
    body
        ul
        each topic in topics
            li
            - rid = encodeURIComponent(topic['@rid']);
                a(href='/topic/' + rid)= topic.title


        form(action='/topic/add' method='post')
            p
                input(type='text' name='title' placeholder='input title')
            p
                textarea(name='desc')
            p
                input(type='submit')

